<form class="form-group form-inline" align="center" action="/events" method="get">
  <fieldset>
    <!-- PgSearch -->
    <div class="container">
      <div class="row">
        <div class="col-lg-12">

          <div class="form-group form-inline">
            <label class="col-md-3 control-label" for="location"></label>  
            <input id="search" name="search" type="text" style="width:200px" placeholder="Search" class="form-control">
          </div>

          <div class="form-group form-inline">
            <label class="col-md-3 control-label" for="location"></label>  
            <input id="start_date" name="start_date" type="text" style="width:150px" placeholder="From" class="form-control">
          </div>
          <!-- Text input-->
          <div class="form-group form-inline">
            <label class="col-md-3 control-label" for="location"></label>  
            <input id="end_date" name="end_date" type="text" style="width:150px" placeholder="To" class="form-control"> 
          </div>
          <!-- Select Basic -->
          <div class="form-group form-inline">
            <label class="col-md-3 control-label" for="location"></label>  
            <input id="city" name="city" type="text" style="width:150px" placeholder="City" class="form-control"> 
          </div>
          <!-- Select Basic -->
          <div class="form-group form-inline">
            <label class="col-md-3 control-label" for="location"></label>  
            <input id="cause" name="cause" type="text" style="width:150px" placeholder="Cause" class="form-control"> 
          </div>
          <!-- /.row -->
          <div class="form-group form-inline">
            <label class="col-md-3 control-label" for="submit"></label>
            <button id="submit" name="submit" class="btn btn-primary">Search</button>
          </div>
        </div>
      </div>
    </div>
  </fieldset>
</form>