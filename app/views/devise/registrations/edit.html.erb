<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <% # note to self: http://apidock.com/rails/ActionView/Helpers/FormBuilder/fields_for %>
  <% if current_user.volunteer? %>
    <%= f.fields_for :profile do |u| %>
      <div class="field">
        <%= u.label :skills %><br />
        <%= u.text_area :skills %>
      </div>

      <div class="field">
        <%= u.label :description %><br />
        <%= u.text_area :description %>
      </div>

      <div class="field">
        <%= u.label :gender %><br />
        <%= u.text_field :gender %>
      </div>

      <div class="field">
        <%= u.label :phone %><br />
        <%= u.text_field :phone %>
      </div>

      <div class="field">
        <%= u.label :street_address %><br />
        <%= u.text_area :street_address %>
      </div>

      <div class="field">
        <%= u.label :postal_code %><br />
        <%= u.text_field :postal_code %>
      </div>

      <div class="field">
        <%= u.label :city %><br />
        <%= u.text_field :city %>
      </div>

      <div class="field">
        <%= u.label :state %><br />
        <%= u.text_field :state %>
      </div>

      <div class="field">
        <%= u.label :country %><br />
        <%= u.text_field :country %>
      </div>

      <div class="field">
        <%= u.label :birthdate %><br />
        <%= u.date_select :birthdate %>
      </div>

      <div class="field">
        <%= u.label :contact_email %><br />
        <%= u.text_field :contact_email %>
      </div>

      <div class="field">
        <%= u.label :language %><br />
        <%= u.text_field :language %>
      </div>

      <div class="field">
        <%= u.label :work %><br />
        <%= u.text_area :work %>
      </div>

      <div class="field">
        <%= u.label :education %><br />
        <%= u.text_field :education %>
      </div>

      <div class="field">
        <%= u.label "Profile Image" %><br />
        <%= u.file_field :avatar %>
      </div>
    <% end %>
  <% elsif current_user.organisation? %>
    <%= f.fields_for :organisation_profile do |u| %>
      <div class="field">
        <%= u.label :name %><br />
        <%= u.text_field :name %>
      </div>

      <div class="field">
        <%= u.label :field_or_industry %><br />
        <%= u.text_field :field_or_industry %>
      </div>

      <div class="field">
        <%= u.label :website %><br />
        <%= u.text_field :website %>
      </div>

      <div class="field">
        <%= u.label :org_description %><br />
        <%= u.text_area :org_description %>
      </div>

      <div class="field">
        <%= u.label :org_size %><br />
        <%= u.number_field :org_size %>
      </div>

      <div class="field">
        <%= u.label :language %><br />
        <%= u.text_field :language %>
      </div>

      <div class="field">
        <%= u.label :phone %><br />
        <%= u.text_field :phone %>
      </div>

      <div class="field">
        <%= u.label :fax %><br />
        <%= u.text_field :fax %>
      </div>

      <div class="field">
        <%= u.label :email %><br />
        <%= u.text_field :email %>
      </div>

      <div class="field">
        <%= u.label :contact_person %><br />
        <%= u.text_field :contact_person %>
      </div>

      <div class="field">
        <%= u.label :address %><br />
        <%= u.text_area :address %>
      </div>

      <div class="field">
        <%= u.label :postal_code %><br />
        <%= u.text_field :postal_code %>
      </div>

      <div class="field">
        <%= u.label :city %><br />
        <%= u.text_field :city %>
      </div>

      <div class="field">
        <%= u.label :state %><br />
        <%= u.text_field :state %>
      </div>

      <div class="field">
        <%= u.label :user_id %><br />
        <%= u.hidden_field :user_id %>
        <% # This should be hidden field%>
      </div>

      <div class="field">
        <%= u.label "Images/Photos" %><br />
        <%= u.file_field :org_photos, multiple: true %>
      </div>
    <% end %>
  <% end %>
  

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
