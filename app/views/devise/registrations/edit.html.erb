<div class="container">
  <div class="log-in" style="margin-left: 15px;">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
  </div>
<div class="col-lg-12 ">
  <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
    <div class="btn-group" role="group">
      <button type="button" id="my profiles" class="btn btn-primary" href="#tab1" data-toggle="tab">
        <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
        <div class="hidden-xs">My Profile</div>
      </button>
    </div>
  </div>
  <div class="well">
    <div class="tab-content">
      <div class="tab-pane fade in active" id="tab1">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>
          <div class="panel panel-default">
            <div class="panel-body">
              <div class="row">
                <div class="log-in" style="margin-left: 15px;">
                 <h4>Log In Details</h4>
                </div>
                <div class="col-lg-6">
                  <div class="field">
                    <%= f.hidden_field :name, autofocus: true %>
                  </div>
                  <div class="field">
                    <%= f.label :email %><br />
                    <%= f.email_field :email %>
                  </div>
                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                  <% end %>
                  <div class="field">
                    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
                    <%= f.password_field :current_password, autocomplete: "off" %>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="field">
                    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
                    <%= f.password_field :password, autocomplete: "off" %>
                    <% if @minimum_password_length %>
                      <br />
                      <em><%= @minimum_password_length %> characters minimum</em>
                    <% end %>
                  </div>
                  <div class="field">
                    <%= f.label :password_confirmation %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "off" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <br/>
          <% # note to self: http://apidock.com/rails/ActionView/Helpers/FormBuilder/fields_for %>
          <% if current_user.volunteer? %>
            <div class="organization-description">
              <div class="row">
                <div class="col-lg-12">
                  <div class="panel panel-default">
                    <div class="panel-body">
                      <div class="row">
                        <div class="log-in" style="margin-left: 15px;">
                          <h4>Profile Details</h4>
                          <p>* Mandatory fields</p>
                        </div>
                        <%= f.fields_for :profile do |u| %>
                          <div class="col-lg-6">
                            <div class="field">
                              <%= u.label :skills %><br />
                              <%= u.text_area :skills %>
                            </div>
                            <div class="field">
                              <%= u.label :description.to_s + "*" %><br />
                              <%= u.text_area :description %>
                            </div>
                            <div class="field">
                              <%= u.label :gender.to_s + "*" %><br />
                              <%= u.text_field :gender %>
                            </div>
                            <div class="field">
                              <%= u.label :phone %><br />
                              <%= u.text_field :phone %>
                            </div>
                            <div class="field">
                              <%= u.label :birthdate %><br />
                              <%= u.date_select :birthdate %>
                            </div>
                            <div class="field">
                              <%= u.label :contact_email.to_s + "*" %><br />
                              <%= u.text_field :contact_email %>
                            </div>
                            <div class="field">
                              <%= u.label :language.to_s + "*" %><br />
                              <%= u.text_field :language %>
                            </div>
                          </div>
                          <div class="col-lg-6">
                            <div class="field">
                              <%= u.label :work %><br />
                              <%= u.text_area :work %>
                            </div>
                            <div class="field">
                              <%= u.label :education %><br />
                              <%= u.text_field :education %>
                            </div>
                            <div class="field">
                              <%= u.label :city.to_s + "*" %><br />
                              <%= u.text_field :city %>
                            </div>
                            <div class="field">
                              <%= u.label :state.to_s + "*" %><br />
                              <%= u.text_field :state %>
                            </div>
                            <div class="field">
                              <%= u.label :country %><br />
                              <%= u.text_field :country %>
                            </div>
                             <div class="field">
                              <%= u.label "Profile Image" %><br />
                              <%= u.file_field :avatar %>
                            </div>
                            <div class="actions">
                              <%= f.submit "Update Profile" %>
                            </div>
                          </div>
                        <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>

          <% elsif current_user.organisation? %>
            <div class="organization-description">
              <div class="row">
                <div class="col-lg-12">
                  <div class="panel panel-default">
                    <div class="panel-body">
                      <div class="row">
                        <div class="log-in" style="margin-left: 15px;">
                          <h4>Profile Details</h4>
                          <p>* Mandatory fields</p>
                        </div>
                        <div class="form-group">
                          <%= f.fields_for :organisation_profile do |u| %>
                            <div class="col-lg-6">
                              <div class="form-group">
                                <%= u.label :name.to_s + "*" %><br />
                                <%= u.text_field :name %>
                              </div>
                              <div class="form-group">
                                <%= u.label :field_or_industry %><br />
                                <%= u.text_field :field_or_industry %>
                              </div>
                              <div class="form-group">
                                <%= u.label :website %><br />
                                <%= u.text_field :website %>
                              </div>
                              <div class="form-group">
                                <%= u.label :org_description.to_s + "*" %><br />
                                <%= u.text_area :org_description %>
                              </div>
                              <div class="form-group">
                                <%= u.label :org_size %><br />
                                <%= u.number_field :org_size %>
                              </div>
                              <div class="form-group">
                                <%= u.label :language %><br />
                                <%= u.text_field :language %>
                              </div>
                              <div class="form-group">
                                <%= u.label "Images/Photos" %><br />
                                <%= u.file_field :org_photos, multiple: true %>
                              </div>
                              
                              
                            </div>
                            <div class="col-lg-6">
                              
                              <div class="form-group">
                                <%= u.label :address.to_s + "*" %><br />
                                <%= u.text_area :address %>
                              </div>
                              <div class="form-group">
                                <%= u.label :postal_code.to_s + "*" %><br />
                                <%= u.text_field :postal_code %>
                              </div>
                              <div class="form-group">
                                <%= u.label :city.to_s + "*" %><br />
                                <%= u.text_field :city %>
                              </div>
                              <div class="form-group">
                                <%= u.label :state.to_s + "*" %><br />
                                <%= u.text_field :state %> 
                              </div>
                              <div class="form-group">
                                <%= u.label :contact_email.to_s + "*" %><br />
                                <%= u.text_field :email %>
                              </div>
                              <div class="form-group">
                                <%= u.label :contact_person.to_s + "*" %><br />
                                <%= u.text_field :contact_person %>
                              </div>
                              <div class="form-group">
                                <%= u.label :phone.to_s + "*" %><br />
                                <%= u.text_field :phone %>
                              </div>
                              <div class="form-group">
                                <%= u.label :fax %><br />
                                <%= u.text_field :fax %>
                              </div>
                              <div class="form-group">
                                <!--         < %= u.label :user_id %><br />
                                  -->    <%= u.hidden_field :user_id %>
                                <% # This should be hidden field%>
                              </div>
                            </div>
                            <div class="actions">
                              <%= f.submit "Update Profile" %>
                            </div>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  
  <%= link_to "Back", :back %>
<% end %>

<h3>Cancel my account</h3>
<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
</div>
