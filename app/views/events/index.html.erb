<%= render partial:"static/carousel" %>
<div class="container-fluid">
  <div class="container">
    <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="page-header" style="margin-left: 15px;"></br>
              <h1>Events</h1>
            </div>
          </div>
            <%= render partial: "home/form" %>
            <hr>
            <br/>
        </div>
    </div>
  <center>
    <% @events.each do |event| %>
        <a href ="<%=event_path(event) %>">
            <div class="event col-lg-4 col-sm-6">
                <% if event.event_photos.present? %>
                    <%= image_tag event.event_photos[0].thumb.url, class: "img-circle img-responsive img-center"  %>
                <% else %>
                    <img class="img-circle img-responsive img-center" src="http://placehold.it/200x200" alt=""/></br>
                <% end %>
              </br>
                <%= event.title %> </br>
                <%= format_date(event) %></br>
                <%= event.category %>
            </div>
        </a>
    <% end %>
    <%= will_paginate @events, renderer: BootstrapPagination::Rails %>
    <%= page_entries_info @events %>
  </div>
</div>
<br>


